---
import academy from "../data/academy.json";
---

<section
  class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20"
>
  <!-- Cricket Stadium Background (Blurred) -->
  <div class="absolute inset-0 z-0">
    <img
      src="/assets/images/cricket_stadium_bg.png"
      alt=""
      class="w-full h-full object-cover opacity-100 blur-[1px] scale-105"
      loading="eager"
    />
    <!-- Dark Gradient Overlay for text readability -->
    <div
      class="absolute inset-0 bg-gradient-to-b from-void/70 via-void/50 to-void"
    >
    </div>
  </div>

  <!-- Sophisticated Background Glows -->
  <div class="absolute inset-0 z-0 pointer-events-none">
    <div
      class="absolute top-[20%] left-[50%] transform -translate-x-1/2 w-[800px] h-[800px] bg-hero-glow opacity-60 rounded-full blur-[100px]"
    >
    </div>
    <div
      class="absolute top-[60%] left-[20%] w-[500px] h-[500px] bg-green-900/20 rounded-full blur-[120px] mix-blend-screen"
    >
    </div>
    <div
      class="absolute bottom-[20%] right-[20%] w-[400px] h-[400px] bg-neon/10 rounded-full blur-[100px] mix-blend-screen"
    >
    </div>
  </div>

  <!-- Content -->
  <div
    class="relative z-10 text-center container mx-auto px-4 hero-content opacity-0 translate-y-10 flex flex-col items-center"
  >
    <!-- Main Title -->
    <h1
      class="text-6xl md:text-8xl font-bold tracking-tighter mb-6 leading-none pt-10"
    >
      <span
        class="block text-white drop-shadow-[0_0_40px_rgba(255,255,255,0.3)]"
        >Seam Cricket</span
      >
      <span
        class="block text-neon-gradient drop-shadow-[0_0_50px_rgba(255,215,0,0.8)] pb-2"
        >Academy</span
      >
    </h1>

    <!-- Tagline -->
    <p
      class="text-lg md:text-xl text-white/80 max-w-3xl mx-auto mb-12 font-light tracking-wide leading-relaxed drop-shadow-md"
    >
      Nurturing passion, discipline, and skill through high-quality cricket
      coaching tailored for every age and skill level.
    </p>

    <!-- Hero Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 w-full max-w-4xl mt-16">
      <!-- New Batches Card -->
      <div
        class="group relative glass-panel p-8 rounded-2xl border border-white/10 overflow-hidden hover:border-neon/50 transition-all duration-500 hover:-translate-y-1"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-neon/10 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"
        >
        </div>
        <div class="relative z-10 flex flex-col items-center">
          <div
            class="w-16 h-16 mb-4 rounded-full bg-neon/20 flex items-center justify-center text-3xl shadow-[0_0_20px_rgba(255,215,0,0.3)] group-hover:scale-110 transition-transform duration-500"
          >
            üöÄ
          </div>
          <h3
            class="text-2xl font-bold text-white mb-2 tracking-wide uppercase"
          >
            New Batches
          </h3>
          <p class="text-white/60 text-sm font-light tracking-wider mb-4">
            LAUNCHING SOON
          </p>
          <a
            href="#programs"
            class="px-6 py-2 rounded-full border border-neon/30 text-neon text-sm font-bold hover:bg-neon hover:text-black transition-all duration-300"
          >
            EXPLORE PROGRAMS
          </a>
        </div>
      </div>

      <!-- Admissions Open Card -->
      <div
        class="group relative glass-panel p-8 rounded-2xl border border-white/10 overflow-hidden hover:border-green-500/50 transition-all duration-500 hover:-translate-y-1"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-green-500/10 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"
        >
        </div>
        <div class="relative z-10 flex flex-col items-center">
          <div
            class="w-16 h-16 mb-4 rounded-full bg-green-500/20 flex items-center justify-center text-3xl shadow-[0_0_20px_rgba(34,197,94,0.3)] group-hover:scale-110 transition-transform duration-500"
          >
            üìù
          </div>
          <h3
            class="text-2xl font-bold text-white mb-2 tracking-wide uppercase"
          >
            Admissions Open
          </h3>
          <p class="text-white/60 text-sm font-light tracking-wider mb-4">
            SEASON 2026
          </p>
          <a
            href="#contact"
            class="px-6 py-2 rounded-full border border-green-500/30 text-green-400 text-sm font-bold hover:bg-green-500 hover:text-white transition-all duration-300"
          >
            REGISTER NOW
          </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    import { gsap } from "gsap";

    gsap.to(".hero-content", {
      opacity: 1,
      y: 0,
      duration: 1.5,
      ease: "power3.out",
      delay: 0.2,
    });
  </script>
</section>
