---
import academy from "../data/academy.json";
---

<section
  class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20"
>
  <!-- Cricket Stadium Background (Blurred) -->
  <div class="absolute inset-0 z-0">
    <img
      src="/assets/images/cricket_stadium_bg.png"
      alt=""
      class="w-full h-full object-cover opacity-80 blur-[1px] scale-105"
      loading="eager"
    />
    <!-- Dark Gradient Overlay for text readability -->
    <div
      class="absolute inset-0 bg-gradient-to-b from-void/90 via-void/80 to-void"
    >
    </div>
  </div>

  <!-- Sophisticated Background Glows -->
  <div class="absolute inset-0 z-0 pointer-events-none">
    <div
      class="absolute top-[20%] left-[50%] transform -translate-x-1/2 w-[800px] h-[800px] bg-hero-glow opacity-60 rounded-full blur-[100px]"
    >
    </div>
    <div
      class="absolute top-[60%] left-[20%] w-[500px] h-[500px] bg-purple-900/20 rounded-full blur-[120px] mix-blend-screen"
    >
    </div>
    <div
      class="absolute bottom-[20%] right-[20%] w-[400px] h-[400px] bg-neon/10 rounded-full blur-[100px] mix-blend-screen"
    >
    </div>
  </div>

  <!-- Content -->
  <div
    class="relative z-10 text-center container mx-auto px-4 hero-content opacity-0 translate-y-10 flex flex-col items-center"
  >
    <!-- Main Title -->
    <h1
      class="text-6xl md:text-8xl font-bold tracking-tighter mb-6 leading-none pt-10"
    >
      <span
        class="block text-white drop-shadow-[0_0_40px_rgba(255,255,255,0.3)]"
        >Seam Cricket</span
      >
      <span
        class="block text-neon-gradient drop-shadow-[0_0_50px_rgba(66,133,244,0.8)] pb-2"
        >Academy</span
      >
    </h1>

    <!-- Tagline -->
    <p
      class="text-lg md:text-xl text-white/80 max-w-3xl mx-auto mb-12 font-light tracking-wide leading-relaxed drop-shadow-md"
    >
      Nurturing passion, discipline, and skill through high-quality cricket
      coaching tailored for every age and skill level.
    </p>

    <!-- Announcement Pill -->
    <div
      class="mb-24 inline-flex items-center gap-3 px-6 py-3 rounded-full bg-red-500/10 border border-red-500/20 backdrop-blur-md shadow-[0_0_20px_rgba(239,68,68,0.2)] hover:bg-red-500/20 transition-colors cursor-default"
    >
      <div
        class="w-2 h-2 rounded-full bg-red-500 animate-pulse shadow-[0_0_10px_#ef4444]"
      >
      </div>
      <span class="text-red-500 font-bold tracking-widest text-sm uppercase"
        >New Batches Launching & Admissions Open!</span
      >
    </div>
  </div>

  <!-- Cards Grid -->
  <div class="relative z-20 w-full max-w-6xl mx-auto px-4 pb-20">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Card 1: Children -->
      <a
        href="#contact"
        class="group relative p-8 bg-[#050508] rounded-2xl border border-white/5 overflow-hidden transition-all duration-500 hover:-translate-y-1 hover:border-neon/30 hover:shadow-[0_10px_40px_rgba(66,133,244,0.1)]"
      >
        <div class="relative z-10 text-left">
          <div
            class="w-12 h-12 mb-6 bg-neon/10 rounded-full flex items-center justify-center border border-neon/20 group-hover:scale-110 transition-transform duration-500"
          >
            <span class="text-2xl">üèè</span>
          </div>
          <h3
            class="text-neon font-black text-2xl mb-1 group-hover:text-white transition-colors uppercase tracking-wider"
          >
            CHILDREN
          </h3>
          <p
            class="font-bold text-xs tracking-widest mb-8 uppercase text-neon/60"
          >
            Weekday Batch
          </p>
          <div
            class="text-white/60 text-xs font-medium border-t border-white/5 pt-4 space-y-1 font-mono"
          >
            <p>Monday, Wednesday, Friday</p>
            <p class="text-white font-bold text-sm">5:15 PM to 7:00 PM</p>
          </div>
        </div>
      </a>

      <!-- Card 2: Daily -->
      <a
        href="#contact"
        class="group relative p-8 bg-[#050508] rounded-2xl border border-white/5 overflow-hidden transition-all duration-500 hover:-translate-y-1 hover:border-yellow-400/30 hover:shadow-[0_10px_40px_rgba(250,204,21,0.1)]"
      >
        <div class="relative z-10 text-left">
          <div
            class="w-12 h-12 mb-6 bg-yellow-400/10 rounded-full flex items-center justify-center border border-yellow-400/20 group-hover:scale-110 transition-transform duration-500"
          >
            <span class="text-2xl">‚ö°</span>
          </div>
          <h3
            class="text-yellow-400 font-black text-2xl mb-1 group-hover:text-white transition-colors uppercase tracking-wider"
          >
            DAILY
          </h3>
          <p
            class="font-bold text-xs tracking-widest mb-8 uppercase text-yellow-400/60"
          >
            Weekday Batch
          </p>
          <div
            class="text-white/60 text-xs font-medium border-t border-white/5 pt-4 space-y-1 font-mono"
          >
            <p>Monday to Friday</p>
            <p class="text-white font-bold text-sm">7:00 AM to 8:30 AM</p>
          </div>
        </div>
      </a>

      <!-- Card 3: Adult -->
      <a
        href="#contact"
        class="group relative p-8 bg-[#050508] rounded-2xl border border-white/5 overflow-hidden transition-all duration-500 hover:-translate-y-1 hover:border-green-500/30 hover:shadow-[0_10px_40px_rgba(34,197,94,0.1)]"
      >
        <div class="relative z-10 text-left">
          <div
            class="w-12 h-12 mb-6 bg-green-500/10 rounded-full flex items-center justify-center border border-green-500/20 group-hover:scale-110 transition-transform duration-500"
          >
            <span class="text-2xl">üß¢</span>
          </div>
          <h3
            class="text-green-500 font-black text-2xl mb-1 group-hover:text-white transition-colors uppercase tracking-wider"
          >
            ADULT
          </h3>
          <p
            class="font-bold text-xs tracking-widest mb-8 uppercase text-green-500/60"
          >
            Weekday Batches
          </p>
          <div
            class="text-white/60 text-xs font-medium border-t border-white/5 pt-4 space-y-1 font-mono"
          >
            <p>Monday, Wednesday, Friday</p>
            <p class="text-white font-bold text-sm">7:00 PM to 8:30 PM</p>
          </div>
        </div>
      </a>
    </div>
  </div>

  <script>
    import { gsap } from "gsap";

    gsap.to(".hero-content", {
      opacity: 1,
      y: 0,
      duration: 1.5,
      ease: "power3.out",
      delay: 0.2,
    });
  </script>
</section>
