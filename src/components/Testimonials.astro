---
import academy from '../data/academy.json';
---
<div class="relative">
    <!-- Stacked cards effect -->
    <div class="space-y-6">
        {academy.testimonials.map((testimonial, i) => (
            <div
                class="group glass-panel p-8 md:p-10 border-l-4 border-amber-500/50 hover:border-amber-500 transition-all duration-300 hover:scale-[1.01] hover:-translate-x-2 bg-gradient-to-r from-white/5 to-transparent"
                style={`transform: translateX(${i * 20}px); position: relative; z-index: ${3 - i};`}
            >
                <div class="flex flex-col md:flex-row gap-6 items-start">
                    <!-- Quote icon -->
                    <div class="flex-shrink-0 text-6xl text-amber-500/30 font-serif leading-none group-hover:text-amber-500/50 transition-colors">"</div>

                    <!-- Content -->
                    <div class="flex-1">
                        <p class="text-gray-200 text-lg md:text-xl leading-relaxed mb-6 italic">{testimonial.quote}</p>
                        <div class="flex items-center gap-3">
                            <div class="w-8 h-px bg-amber-500/50"></div>
                            <p class="text-amber-400 font-bold text-lg tracking-wide">{testimonial.author}</p>
                        </div>
                    </div>
                </div>
            </div>
        ))}
    </div>
</div>
