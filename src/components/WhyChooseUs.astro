---
import academy from '../data/academy.json';

const features = academy.about.features;
---
<div class="relative">
    <!-- Background glow -->
    <div class="absolute inset-0 bg-gradient-radial from-neon/5 via-transparent to-transparent blur-3xl"></div>
    
    <div class="relative glass-panel p-10 md:p-14">
        <!-- Header -->
        <div class="text-center mb-12">
            <h3 class="text-3xl font-bold text-white mb-4">What Sets Us Apart</h3>
            <div class="w-24 h-1 bg-gradient-to-r from-transparent via-neon to-transparent mx-auto"></div>
        </div>
        
        <!-- Features Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {features.map((feature, i) => (
                <div class="group flex items-start gap-4 p-6 rounded-xl bg-white/5 hover:bg-neon/10 transition-all duration-300 hover:scale-[1.02] border border-transparent hover:border-neon/20">
                    <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-neon/20 flex items-center justify-center text-2xl group-hover:scale-110 transition-transform">
                        ğŸ
                    </div>
                    <p class="text-gray-200 font-medium leading-relaxed pt-2">{feature}</p>
                </div>
            ))}
        </div>
    </div>
</div>
