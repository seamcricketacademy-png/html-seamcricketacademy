---
import academy from '../data/academy.json';
---
<div class="gallery-container relative overflow-hidden py-4">
    <div class="gallery-track flex gap-8" id="galleryTrack">
        {/* First set of images */}
        {academy.trainers.map((trainer, i) => (
            <div class="trainer-card flex-shrink-0 w-[400px] glass-panel overflow-hidden group">
                <div class="h-[480px] w-full overflow-hidden">
                    <img 
                        src={trainer.image} 
                        alt={trainer.name}
                        class="w-full h-full object-cover object-top group-hover:scale-105 transition-transform duration-700"
                        loading="lazy"
                    />
                </div>
                <div class="p-8 text-center">
                    <h3 class="text-2xl font-bold text-white mb-2 group-hover:text-neon transition-colors">{trainer.name}</h3>
                    <p class="text-neon text-sm uppercase tracking-widest mb-4 font-semibold">{trainer.title}</p>
                    <p class="text-gray-400 text-sm leading-relaxed">{trainer.bio}</p>
                </div>
            </div>
        ))}
        {/* Duplicate for seamless loop */}
        {academy.trainers.map((trainer, i) => (
            <div class="trainer-card flex-shrink-0 w-[400px] glass-panel overflow-hidden group">
                <div class="h-[480px] w-full overflow-hidden">
                    <img 
                        src={trainer.image} 
                        alt={trainer.name}
                        class="w-full h-full object-cover object-top group-hover:scale-105 transition-transform duration-700"
                        loading="lazy"
                    />
                </div>
                <div class="p-8 text-center">
                    <h3 class="text-2xl font-bold text-white mb-2 group-hover:text-neon transition-colors">{trainer.name}</h3>
                    <p class="text-neon text-sm uppercase tracking-widest mb-4 font-semibold">{trainer.title}</p>
                    <p class="text-gray-400 text-sm leading-relaxed">{trainer.bio}</p>
                </div>
            </div>
        ))}
    </div>
</div>

<style>
    .gallery-container {
        mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent);
        -webkit-mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent);
    }
</style>

<script>
    import { gsap } from "gsap";
    
    const track = document.getElementById('galleryTrack');
    const cards = track?.querySelectorAll('.trainer-card');
    
    if (track && cards && cards.length > 0) {
        const cardWidth = 400 + 32; // w-[400px] + gap-8 (32px)
        const totalWidth = cardWidth * (cards.length / 2);
        
        const tl = gsap.timeline({ repeat: -1 });
        tl.to(track, {
            x: -totalWidth,
            duration: 25,
            ease: "none"
        });
        
        track.addEventListener('mouseenter', () => tl.pause());
        track.addEventListener('mouseleave', () => tl.play());
    }
</script>
