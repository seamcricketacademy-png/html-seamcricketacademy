---
const navLinks = [
    { href: "#home", label: "Home" },
    { href: "#programs", label: "Programs" },
    { href: "#trainers", label: "Coaches" },
    { href: "#gallery", label: "Gallery" },
    { href: "#contact", label: "Join Now" }
];
---
<header id="mainNav" class="fixed top-0 left-0 right-0 z-50 transition-all duration-700">
    <!-- Fully transparent/glassy background with subtle Christmas glow -->
    <div class="absolute inset-0 bg-white/[0.02] backdrop-blur-2xl border-b border-white/5"></div>
    
    <!-- Christmas lights decoration -->
    <div class="absolute top-0 left-0 right-0 h-1 overflow-hidden">
        <div class="christmas-lights flex justify-around">
            <span class="w-2 h-2 rounded-full bg-red-500 shadow-[0_0_8px_rgba(239,68,68,0.8)] animate-pulse"></span>
            <span class="w-2 h-2 rounded-full bg-green-500 shadow-[0_0_8px_rgba(34,197,94,0.8)] animate-pulse" style="animation-delay: 0.2s"></span>
            <span class="w-2 h-2 rounded-full bg-yellow-400 shadow-[0_0_8px_rgba(250,204,21,0.8)] animate-pulse" style="animation-delay: 0.4s"></span>
            <span class="w-2 h-2 rounded-full bg-red-500 shadow-[0_0_8px_rgba(239,68,68,0.8)] animate-pulse" style="animation-delay: 0.6s"></span>
            <span class="w-2 h-2 rounded-full bg-green-500 shadow-[0_0_8px_rgba(34,197,94,0.8)] animate-pulse" style="animation-delay: 0.8s"></span>
            <span class="w-2 h-2 rounded-full bg-yellow-400 shadow-[0_0_8px_rgba(250,204,21,0.8)] animate-pulse" style="animation-delay: 1s"></span>
            <span class="w-2 h-2 rounded-full bg-red-500 shadow-[0_0_8px_rgba(239,68,68,0.8)] animate-pulse" style="animation-delay: 0.3s"></span>
            <span class="w-2 h-2 rounded-full bg-green-500 shadow-[0_0_8px_rgba(34,197,94,0.8)] animate-pulse" style="animation-delay: 0.5s"></span>
            <span class="w-2 h-2 rounded-full bg-yellow-400 shadow-[0_0_8px_rgba(250,204,21,0.8)] animate-pulse" style="animation-delay: 0.7s"></span>
            <span class="w-2 h-2 rounded-full bg-red-500 shadow-[0_0_8px_rgba(239,68,68,0.8)] animate-pulse" style="animation-delay: 0.9s"></span>
            <span class="w-2 h-2 rounded-full bg-green-500 shadow-[0_0_8px_rgba(34,197,94,0.8)] animate-pulse" style="animation-delay: 0.1s"></span>
            <span class="w-2 h-2 rounded-full bg-yellow-400 shadow-[0_0_8px_rgba(250,204,21,0.8)] animate-pulse" style="animation-delay: 0.4s"></span>
        </div>
    </div>
    
    <nav class="relative container mx-auto px-6 py-5 flex items-center justify-between">
        <a href="#home" class="flex items-center gap-4 group">
            <!-- Christmas holly next to logo -->
            <span class="text-xl hidden md:block">ðŸŽ„</span>
            <img 
                src="/assets/images/Seams Logo.png" 
                alt="Seam Cricket Academy" 
                class="h-14 md:h-16 w-auto transition-all duration-500 group-hover:brightness-110"
            />
            <!-- Tagline -->
            <span class="hidden lg:block text-white/60 text-sm font-light tracking-wide border-l border-white/20 pl-4 ml-2">
                Train Hard. Play Smart. Rise Higher.
            </span>
        </a>
        
        <!-- Desktop Navigation -->
        <ul class="hidden md:flex items-center gap-12">
            {navLinks.map((link) => (
                <li>
                    <a 
                        href={link.href} 
                        class="nav-link text-white/70 hover:text-white font-light transition-all duration-500 text-[15px] tracking-[0.2em] uppercase relative group"
                    >
                        <span class="relative z-10">{link.label}</span>
                        <span class="absolute inset-x-0 -bottom-1 h-px bg-gradient-to-r from-transparent via-neon to-transparent scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></span>
                    </a>
                </li>
            ))}
            <!-- Christmas greeting -->
            <li class="text-red-400/80 text-sm tracking-wider animate-pulse">
                ðŸŽ… Merry Christmas!
            </li>
        </ul>
        
        <!-- Mobile Menu Toggle -->
        <button class="md:hidden text-white/80 hover:text-white p-2 transition-colors" id="mobileMenuToggle" aria-label="Toggle menu">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9h16.5m-16.5 6.75h16.5"></path>
            </svg>
        </button>
    </nav>
    
    <!-- Mobile Menu -->
    <div id="mobileMenu" class="hidden md:hidden relative bg-void/95 backdrop-blur-3xl border-t border-white/5">
        <ul class="container mx-auto px-6 py-8 space-y-6">
            {navLinks.map((link) => (
                <li>
                    <a 
                        href={link.href} 
                        class="block text-white/60 hover:text-white font-light transition-colors py-2 text-center text-lg tracking-widest uppercase"
                    >
                        {link.label}
                    </a>
                </li>
            ))}
            <!-- Mobile Christmas greeting -->
            <li class="text-center text-red-400/80 text-sm pt-4 border-t border-white/10 animate-pulse">
                ðŸŽ„ Merry Christmas! ðŸŽ…
            </li>
        </ul>
    </div>
</header>

<!-- Spacer -->
<div class="h-28 md:h-32"></div>

<script>
    const toggle = document.getElementById('mobileMenuToggle');
    const menu = document.getElementById('mobileMenu');
    
    toggle?.addEventListener('click', () => {
        menu?.classList.toggle('hidden');
    });
    
    menu?.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
            menu?.classList.add('hidden');
        });
    });
    
    // Auto-hide navbar
    const nav = document.getElementById('mainNav');
    let lastScrollY = window.scrollY;
    
    window.addEventListener('scroll', () => {
        const currentScrollY = window.scrollY;
        
        if (currentScrollY > lastScrollY && currentScrollY > 200) {
            nav?.classList.add('-translate-y-full', 'opacity-0');
        } else {
            nav?.classList.remove('-translate-y-full', 'opacity-0');
        }
        
        lastScrollY = currentScrollY;
    });
</script>
