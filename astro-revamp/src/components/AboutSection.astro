---
<div class="grid md:grid-cols-2 gap-10">
    {academy.about.sections.map((section, i) => (
        <div class="group relative">
            <!-- Glow effect -->
            <div class="absolute -inset-1 bg-gradient-to-r from-neon/20 to-purple-500/20 rounded-3xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            
            <!-- Card -->
            <div class="relative glass-panel p-10 h-full hover:scale-[1.02] transition-all duration-500">
                <!-- Icon header -->
                <div class="flex items-center gap-4 mb-8">
                    <div class="w-14 h-14 rounded-2xl bg-neon/20 flex items-center justify-center text-3xl">
                        {i === 0 ? 'ðŸŽ¯' : 'ðŸ’¡'}
                    </div>
                    <h3 class="text-2xl font-bold text-white group-hover:text-neon transition-colors">{section.title}</h3>
                </div>
                
                <!-- Content -->
                <p class="text-gray-300 text-lg leading-relaxed">{section.content}</p>
                
