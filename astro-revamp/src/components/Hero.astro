---
import academy from '../data/academy.json';
---
<section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20">
    <!-- Sophisticated Background Glows -->
    <div class="absolute inset-0 z-0 pointer-events-none">
        <div class="absolute top-[20%] left-[50%] transform -translate-x-1/2 w-[800px] h-[800px] bg-hero-glow opacity-60 rounded-full blur-[100px]"></div>
        <div class="absolute top-[60%] left-[20%] w-[500px] h-[500px] bg-purple-900/20 rounded-full blur-[120px] mix-blend-screen"></div>
        <div class="absolute bottom-[20%] right-[20%] w-[400px] h-[400px] bg-neon/10 rounded-full blur-[100px] mix-blend-screen"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 text-center container mx-auto px-4 hero-content opacity-0 translate-y-10">
        <h1 class="text-7xl md:text-9xl font-bold tracking-tighter mb-8 leading-none">
            <span class="block text-white drop-shadow-[0_0_40px_rgba(255,255,255,0.5)] [text-shadow:_0_0_60px_rgba(66,133,244,0.8),_0_0_120px_rgba(66,133,244,0.4)]">Seam Cricket</span>
            <span class="block text-neon-gradient drop-shadow-[0_0_30px_rgba(66,133,244,0.6)]">Academy</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-300 max-w-3xl mx-auto mb-12 leading-relaxed font-light tracking-wide">
            {academy.hero.subtitle}
        </p>
        <div class="flex justify-center gap-6">
            <a href={academy.hero.ctaLink} class="group relative inline-flex items-center justify-center px-8 py-4 bg-white/5 backdrop-blur-md border border-white/10 rounded-full overflow-hidden transition-all duration-300 hover:bg-white/10 hover:scale-105 hover:shadow-neon hover:border-neon/50">
                <span class="relative z-10 font-bold text-white tracking-widest text-sm uppercase group-hover:text-neon transition-colors">Start Training</span>
                <div class="absolute inset-0 bg-neon/20 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></div>
            </a>
        </div>
    </div>

    <script>
        import { gsap } from "gsap";
        
        gsap.to(".hero-content", {
            opacity: 1,
            y: 0,
            duration: 2,
            ease: "power4.out",
            delay: 0.2
        });
    </script>
</section>
